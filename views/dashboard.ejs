<%- include('include/header'); %>

<body class="bg-gray-100 font-sans">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <%- include('include/sidebar'); %>

        <!-- Main Content -->
        <div class="flex-1 p-10">
            
            <%- include('include/navbar'); %>

            <!-- Financial Summary Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-green-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3 class="text-sm text-gray-500 uppercase tracking-wide">
                                Total Balance
                            </h3>
                            <p class="text-2xl font-bold text-gray-800">$12,345.67</p>
                        </div>
                        <svg class="w-10 h-10 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                            </path>
                        </svg>
                    </div>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-blue-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3 class="text-sm text-gray-500 uppercase tracking-wide">
                                Monthly Income
                            </h3>
                            <p class="text-2xl font-bold text-gray-800">$3,500.00</p>
                        </div>
                        <svg class="w-10 h-10 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                            </path>
                        </svg>
                    </div>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-red-500">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3 class="text-sm text-gray-500 uppercase tracking-wide">
                                Monthly Expenses
                            </h3>
                            <p class="text-2xl font-bold text-gray-800">$1,800.00</p>
                        </div>
                        <svg class="w-10 h-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z">
                            </path>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-lg font-semibold text-gray-700 mb-4">
                        Expense Categories
                    </h3>
                    <canvas id="expenseCategoryChart"></canvas>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-lg font-semibold text-gray-700 mb-4">
                        Income vs Expenses
                    </h3>
                    <canvas id="incomeExpensesChart"></canvas>
                </div>
            </div>

            <!-- Recent Transactions -->
            <div class="mt-10 bg-white p-6 rounded-lg shadow-md">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-lg font-semibold text-gray-700">
                        Recent Transactions
                    </h3>
                    <a href="#" class="text-blue-600 hover:underline">View All</a>
                </div>
                <table class="w-full text-sm text-gray-600">
                    <thead>
                        <tr class="border-b">
                            <th class="py-3 text-left">Date</th>
                            <th class="py-3 text-left">Description</th>
                            <th class="py-3 text-right">Amount</th>
                            <th class="py-3 text-left">Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="py-3">Jan 20, 2025</td>
                            <td class="py-3">Grocery Shopping</td>
                            <td class="py-3 text-right text-red-600">-$120.00</td>
                            <td class="py-3">Food & Dining</td>
                        </tr>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="py-3">Jan 19, 2025</td>
                            <td class="py-3">Salary Deposit</td>
                            <td class="py-3 text-right text-green-600">+$3,500.00</td>
                            <td class="py-3">Income</td>
                        </tr>
                        <tr class="hover:bg-gray-50">
                            <td class="py-3">Jan 18, 2025</td>
                            <td class="py-3">Electric Bill</td>
                            <td class="py-3 text-right text-red-600">-$75.00</td>
                            <td class="py-3">Utilities</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        // Expense Category Chart
        const expenseCategoryCtx = document
            .getElementById("expenseCategoryChart")
            .getContext("2d");
        new Chart(expenseCategoryCtx, {
            type: "doughnut",
            data: {
                labels: [
                    "Food",
                    "Transportation",
                    "Utilities",
                    "Entertainment",
                    "Other",
                ],
                datasets: [
                    {
                        data: [35, 20, 15, 15, 15],
                        backgroundColor: [
                            "#3B82F6",
                            "#10B981",
                            "#F43F5E",
                            "#8B5CF6",
                            "#F59E0B",
                        ],
                    },
                ],
            },
            options: {
                responsive: true,
                plugins: {
                    datalabels: {
                        color: "white",
                        formatter: (value) => `${value}%`,
                    },
                },
            },
        });

        // Income vs Expenses Chart
        const incomeExpensesCtx = document
            .getElementById("incomeExpensesChart")
            .getContext("2d");
        new Chart(incomeExpensesCtx, {
            type: "bar",
            data: {
                labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
                datasets: [
                    {
                        label: "Income",
                        data: [3500, 3600, 3550, 3700, 3450, 3800],
                        backgroundColor: "#10B981",
                    },
                    {
                        label: "Expenses",
                        data: [1800, 2000, 1900, 2100, 1750, 2050],
                        backgroundColor: "#F43F5E",
                    },
                ],
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                    },
                },
            },
        });
    </script>
</body>

</html>
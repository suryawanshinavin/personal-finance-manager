<%- include('include/header'); %>

<body class="bg-gray-50 font-sans">

  <%- include('include/navbar'); %>

  <div class="flex min-h-screen">

    <%- include('include/sidebar'); %>

    <!-- Main Content -->
    <div class="flex-1 min-h-screen">
      <!-- Desktop Header -->
      <header class="hidden lg:block bg-white shadow-sm px-6 lg:px-10 py-4">
        <div class="flex justify-between items-center">
          <div>
            <h2 class="text-2xl lg:text-3xl font-bold text-gray-800">Dashboard</h2>
            <p class="text-gray-500 mt-1">Financial insights for today</p>
          </div>
          <div class="flex items-center space-x-4">
            <button class="relative p-2 text-gray-600 hover:text-gray-800 transition-colors">
              <i class="fas fa-bell text-xl"></i>
              <span class="absolute top-0 right-0 w-3 h-3 bg-red-500 rounded-full"></span>
            </button>
            <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full overflow-hidden">
              <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=40&h=40&fit=crop&crop=face" alt="Profile" class="w-full h-full object-cover" />
            </div>
          </div>
        </div>
      </header>

      <main class="p-4 lg:p-10">
        <!-- Financial Summary Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6 mb-6 lg:mb-8">
          <div class="bg-white p-4 lg:p-6 rounded-xl shadow-md border-l-4 border-green-500 card-hover">
            <div class="flex justify-between items-center">
              <div class="flex-1">
                <h3 class="text-xs lg:text-sm text-gray-500 uppercase tracking-wide font-medium">
                  Total Balance
                </h3>
                <p class="text-xl lg:text-2xl font-bold text-gray-800 mt-1">$12,345.67</p>
                <p class="text-xs text-green-600 mt-1">+2.5% from last month</p>
              </div>
              <div class="bg-green-100 p-3 rounded-full">
                <i class="fas fa-wallet text-green-600 text-xl"></i>
              </div>
            </div>
          </div>

          <div class="bg-white p-4 lg:p-6 rounded-xl shadow-md border-l-4 border-blue-500 card-hover">
            <div class="flex justify-between items-center">
              <div class="flex-1">
                <h3 class="text-xs lg:text-sm text-gray-500 uppercase tracking-wide font-medium">
                  Monthly Income
                </h3>
                <p class="text-xl lg:text-2xl font-bold text-gray-800 mt-1">$3,500.00</p>
                <p class="text-xs text-blue-600 mt-1">+5.2% from last month</p>
              </div>
              <div class="bg-blue-100 p-3 rounded-full">
                <i class="fas fa-arrow-trend-up text-blue-600 text-xl"></i>
              </div>
            </div>
          </div>

          <div class="bg-white p-4 lg:p-6 rounded-xl shadow-md border-l-4 border-red-500 card-hover sm:col-span-2 lg:col-span-1">
            <div class="flex justify-between items-center">
              <div class="flex-1">
                <h3 class="text-xs lg:text-sm text-gray-500 uppercase tracking-wide font-medium">
                  Monthly Expenses
                </h3>
                <p class="text-xl lg:text-2xl font-bold text-gray-800 mt-1">$1,800.00</p>
                <p class="text-xs text-red-600 mt-1">-3.1% from last month</p>
              </div>
              <div class="bg-red-100 p-3 rounded-full">
                <i class="fas fa-arrow-trend-down text-red-600 text-xl"></i>
              </div>
            </div>
          </div>
        </div>

        <!-- Charts Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 mb-8">
          <div class="bg-white p-4 lg:p-6 rounded-xl shadow-md card-hover">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-lg font-semibold text-gray-700">Expense Categories</h3>
              <div class="flex space-x-2">
                <button class="p-1 text-gray-400 hover:text-gray-600">
                  <i class="fas fa-expand-arrows-alt text-sm"></i>
                </button>
              </div>
            </div>
            <div class="chart-container">
              <canvas id="expenseCategoryChart"></canvas>
            </div>
          </div>

          <div class="bg-white p-4 lg:p-6 rounded-xl shadow-md card-hover">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-lg font-semibold text-gray-700">Income vs Expenses</h3>
              <div class="flex space-x-2">
                <button class="p-1 text-gray-400 hover:text-gray-600">
                  <i class="fas fa-expand-arrows-alt text-sm"></i>
                </button>
              </div>
            </div>
            <div class="chart-container">
              <canvas id="incomeExpensesChart"></canvas>
            </div>
          </div>
        </div>

        <!-- Recent Transactions -->
        <div class="bg-white p-4 lg:p-6 rounded-xl shadow-md card-hover">
          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-4 space-y-2 sm:space-y-0">
            <h3 class="text-lg font-semibold text-gray-700">Recent Transactions</h3>
            <div class="flex space-x-2">
              <button class="px-3 py-1 text-sm bg-blue-100 text-blue-600 rounded-lg hover:bg-blue-200 transition-colors">
                <i class="fas fa-filter mr-1"></i>Filter
              </button>
              <a href="#" class="px-3 py-1 text-sm text-blue-600 hover:text-blue-800 hover:underline">
                View All
              </a>
            </div>
          </div>

          <!-- Desktop Table -->
          <div class="hidden md:block overflow-x-auto">
            <table class="w-full text-sm text-gray-600">
              <thead>
                <tr class="border-b border-gray-200 text-left">
                  <th class="py-3 font-medium">Date</th>
                  <th class="py-3 font-medium">Description</th>
                  <th class="py-3 font-medium text-right">Amount</th>
                  <th class="py-3 font-medium">Category</th>
                  <th class="py-3 font-medium">Status</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                  <td class="py-3">Jan 20, 2025</td>
                  <td class="py-3">Grocery Shopping</td>
                  <td class="py-3 text-right font-semibold text-red-600">-$120.00</td>
                  <td class="py-3">
                    <span class="px-2 py-1 bg-orange-100 text-orange-800 rounded-full text-xs">Food &
                      Dining</span>
                  </td>
                  <td class="py-3">
                    <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Completed</span>
                  </td>
                </tr>
                <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                  <td class="py-3">Jan 19, 2025</td>
                  <td class="py-3">Salary Deposit</td>
                  <td class="py-3 text-right font-semibold text-green-600">+$3,500.00</td>
                  <td class="py-3">
                    <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs">Income</span>
                  </td>
                  <td class="py-3">
                    <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Completed</span>
                  </td>
                </tr>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="py-3">Jan 18, 2025</td>
                  <td class="py-3">Electric Bill</td>
                  <td class="py-3 text-right font-semibold text-red-600">-$75.00</td>
                  <td class="py-3">
                    <span class="px-2 py-1 bg-purple-100 text-purple-800 rounded-full text-xs">Utilities</span>
                  </td>
                  <td class="py-3">
                    <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Completed</span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <!-- Mobile Cards -->
          <div class="md:hidden space-y-3">
            <div class="bg-gray-50 p-4 rounded-lg">
              <div class="flex justify-between items-start mb-2">
                <div>
                  <p class="font-medium text-gray-800">Grocery Shopping</p>
                  <p class="text-sm text-gray-500">Jan 20, 2025</p>
                </div>
                <p class="font-semibold text-red-600">-$120.00</p>
              </div>
              <div class="flex justify-between items-center">
                <span class="px-2 py-1 bg-orange-100 text-orange-800 rounded-full text-xs">Food & Dining</span>
                <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Completed</span>
              </div>
            </div>

            <div class="bg-gray-50 p-4 rounded-lg">
              <div class="flex justify-between items-start mb-2">
                <div>
                  <p class="font-medium text-gray-800">Salary Deposit</p>
                  <p class="text-sm text-gray-500">Jan 19, 2025</p>
                </div>
                <p class="font-semibold text-green-600">+$3,500.00</p>
              </div>
              <div class="flex justify-between items-center">
                <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs">Income</span>
                <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Completed</span>
              </div>
            </div>

            <div class="bg-gray-50 p-4 rounded-lg">
              <div class="flex justify-between items-start mb-2">
                <div>
                  <p class="font-medium text-gray-800">Electric Bill</p>
                  <p class="text-sm text-gray-500">Jan 18, 2025</p>
                </div>
                <p class="font-semibold text-red-600">-$75.00</p>
              </div>
              <div class="flex justify-between items-center">
                <span class="px-2 py-1 bg-purple-100 text-purple-800 rounded-full text-xs">Utilities</span>
                <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Completed</span>
              </div>
            </div>
          </div>
        </div>
      </main>

    </div>
  </div>

  <%- include('include/footer') %>

  <script>

    // Chart configurations
    Chart.register(ChartDataLabels);

    // Expense Category Chart
    const expenseCategoryCtx = document.getElementById("expenseCategoryChart").getContext("2d");
    new Chart(expenseCategoryCtx, {
      type: "doughnut",
      data: {
        labels: ["Food & Dining", "Transportation", "Utilities", "Entertainment", "Shopping", "Other"],
        datasets: [{
          data: [30, 20, 15, 12, 13, 10],
          backgroundColor: [
            "#f97316",
            "#06b6d4",
            "#8b5cf6",
            "#f59e0b",
            "#ef4444",
            "#6b7280"
          ],
          borderWidth: 0,
          cutout: '60%'
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom',
            labels: {
              usePointStyle: true,
              padding: 20,
              font: {
                size: 12
              }
            }
          },
          datalabels: {
            color: 'white',
            font: {
              weight: 'bold',
              size: 10
            },
            formatter: (value) => `${value}%`
          }
        }
      }
    });

    // Income vs Expenses Chart
    const incomeExpensesCtx = document.getElementById("incomeExpensesChart").getContext("2d");
    new Chart(incomeExpensesCtx, {
      type: "bar",
      data: {
        labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
        datasets: [{
          label: "Income",
          data: [3500, 3600, 3550, 3700, 3450, 3800],
          backgroundColor: "#10b981",
          borderRadius: 8,
          borderSkipped: false
        }, {
          label: "Expenses",
          data: [1800, 2000, 1900, 2100, 1750, 2050],
          backgroundColor: "#ef4444",
          borderRadius: 8,
          borderSkipped: false
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'top',
            labels: {
              usePointStyle: true,
              padding: 20
            }
          },
          datalabels: {
            display: false
          }
        },
        scales: {
          x: {
            grid: {
              display: false
            }
          },
          y: {
            beginAtZero: true,
            grid: {
              borderDash: [5, 5]
            }
          }
        },
        interaction: {
          intersect: false,
          mode: 'index'
        }
      }
    });

  </script>
</body>

</html>